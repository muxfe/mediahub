extends ../layout
block content
  div(class="page")
    div(class="page-header")
      h1(class="page-title") 小说列表
    div(class="page-body")
      div(class="weui-cells")
        a(href='/book' + basePath, class="weui-cell weui-cell_access")
          div(class="weui-cell__bd")
            p
              i(class="fa fa-folder-open") #{' .'}
        a(href=prevPath, class="weui-cell weui-cell_access")
          div(class="weui-cell__bd")
            p
              i(class="fa fa-folder-open") #{' ..'}
        each val, index in bookList
          - if (val.type === 'dir')
            a(href='/book' + basePath + '/' + index, class="weui-cell weui-cell_access")
              div(class="weui-cell__bd")
                p
                  i(class="fa fa-folder-open") #{' ' + val.filename}
        each val, index in bookList
          - if (val.type !== 'dir')
            a(href='/book' + basePath + '/' + index, class="weui-cell weui-cell_access")
              div(class="weui-cell__bd")
                p
                  i(class="fa fa-file-text") #{' ' + val.filename}

          div(class="weui-cell__ft")
